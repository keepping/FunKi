<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl_ranking"
    android:layout_height="wrap_content"
    android:background="@color/_28114D"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tv_anthor_position"
        fontPath="fonts/FZZDXFW.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/iv_rank_first"
        android:gravity="center"
        android:text="第一名"
        android:textColor="@color/_FFFFFF"
        android:textSize="11sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/fl_anchor_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_anchor_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/iv_rank_anchor_first" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="42dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_anchor_photo"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/iv_rank_anchor_third" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_anchor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_anchor_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_anchor_name"
            fontPath="fonts/FZZDXFW.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rank_accompany"
            android:textColor="@color/_FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_anchor_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/iv_girl" />

        <TextView
            android:id="@+id/tv_anchor_lv"
            fontPath="fonts/FZZDXFW.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_lv"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="@string/search_lv"
            android:textColor="@color/_FFFFFF"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_anchor_gold"
        fontPath="fonts/FZZDXFW.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_anchor_info"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/rank_gold_number"
        android:textColor="@color/_9B44ED"
        android:textStyle="bold" />
</RelativeLayout>
