<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_visitor_fill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.hifunki.funki.ui.activity.VisitorFillActivity"
    tools:ignore="MissingPrefix">

    <!--<com.hifunki.funki.ui.widget.TitleBar-->
    <!--android:id="@+id/tbVisitor"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="42dp"-->

    <!-- 顶部栏 -->

    <include layout="@layout/title_templet" />
    <!--android:clipToPadding="true"-->
    <!--android:fitsSystemWindows="true"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_visitor_height">

            <TextView
                style="@style/ActivityVisitorTvTitle"
                fontPath="fonts/FZZDXFW.ttf"
                android:text="@string/visitor_sex" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_visitor_ll_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBoy"
                    style="@style/ActivityVisitorTvValue"
                    fontPath="fonts/FZDHTFW.ttf"
                    android:text="@string/boy" />

                <TextView
                    android:id="@+id/tvGirl"
                    style="@style/ActivityVisitorTvValue"
                    fontPath="fonts/FZDHTFW.ttf"
                    android:text="@string/girl" />

                <TextView
                    android:id="@+id/tvThirdSex"
                    style="@style/ActivityVisitorTvValue"
                    fontPath="fonts/FZDHTFW.ttf"
                    android:layout_width="@dimen/activity_visitor_tv_three"
                    android:text="@string/third_sex" />
            </LinearLayout>

        </RelativeLayout>

        <!--sex orientation 性取向-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/ActivityVisitorTvTitle"
                fontPath="fonts/FZZDXFW.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sex_orientation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_visitor_ll_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLoveSameSex"
                        style="@style/ActivityVisitorTvValue"
                        fontPath="fonts/FZDHTFW.ttf"
                        android:layout_width="@dimen/activity_visitor_tv_four"
                        android:text="@string/love_same_sex" />

                    <TextView
                        android:id="@+id/tvLoveDifferentSex"
                        style="@style/ActivityVisitorTvValue"
                        fontPath="fonts/FZDHTFW.ttf"
                        android:layout_width="@dimen/activity_visitor_tv_four"
                        android:text="@string/love_different_sex" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNotCareSex"
                        style="@style/ActivityVisitorTvValue"
                        fontPath="fonts/FZDHTFW.ttf"
                        android:layout_width="@dimen/activity_visitor_tv_five"
                        android:text="@string/not_care_sex" />

                    <TextView
                        android:id="@+id/tvLoveBothSex"
                        style="@style/ActivityVisitorTvValue"
                        fontPath="fonts/FZDHTFW.ttf"
                        android:layout_width="@dimen/activity_visitor_tv_four"
                        android:text="@string/love_both_sex" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSecretSex"
                        style="@style/ActivityVisitorTvValue"
                        fontPath="fonts/FZDHTFW.ttf"
                        android:layout_width="@dimen/activity_visitor_tv_two"
                        android:layout_height="29dp"
                        android:text="@string/secret_sex" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--input age-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/etInputAge"
                fontPath="fonts/FZZDXFW.ttf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_visitor_ll_margin"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="@string/input_age"
                android:textColor="@color/vistorTvbgNormal"
                android:textColorHint="@color/vistorTvbgNormal"
                android:textSize="@dimen/activity_vistitor_tv_size" />

            <TextView
                style="@style/ActivityVisitorTvTitle"
                fontPath="fonts/FZZDXFW.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="@string/age" />

        </RelativeLayout>
        <!--confirm 确定-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="76dp">

            <TextView
                android:id="@+id/tvVisitorConfirm"
                style="@style/ActivityVisitorTvTitle"
                fontPath="fonts/FZZDXFW.ttf"
                android:layout_width="332dp"
                android:layout_height="match_parent"
                android:layout_marginRight="14dp"
                android:background="@drawable/visitor_confirm_bg"
                android:text="@string/confirm"
                android:textColor="@color/vistorTvbgNormal"
                android:textStyle="bold" />

        </LinearLayout>
        <!--skip-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="42dp"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/llSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/FZZDXFW.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="@string/skip"
                    android:textColor="@color/vistorTvbgNormal"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/iv_skip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
