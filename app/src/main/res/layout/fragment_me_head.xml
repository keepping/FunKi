<?xml version="1.0" encoding="utf-8"?>
<!--个人中心头部布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_me_head"
    android:background="@drawable/iv_me_head_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_me_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/iv_me_salary" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_me_salary"
        android:src="@drawable/iv_me_edit" />

    <RelativeLayout
        android:id="@+id/iv_me_photo"
        android:layout_width="187dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="109dp"
            android:src="@drawable/iv_logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/iv_logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/iv_logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="59dp"
            android:src="@drawable/iv_logo" />

        <com.hifunki.funki.module.home.widget.MeHeadPhotoView
            android:layout_width="187dp"
            android:layout_height="104dp"></com.hifunki.funki.module.home.widget.MeHeadPhotoView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_me_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/iv_me_share" />

    <ImageView
        android:id="@+id/iv_me_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/iv_me_share"
        android:src="@drawable/iv_me_list" />

    <RelativeLayout
        android:id="@+id/rl_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_me_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_name"
            android:textColor="@color/titleText"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_name"
            android:src="@drawable/iv_search_hot_girl" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_user_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_user_id"
            android:textColor="@color/loginTvUnClick"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_send_diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_user_id"
            android:text="@string/me_send_diamond"
            android:textColor="@color/loginTvUnClick"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_send_diamond"
            android:src="@drawable/iv_vip_diamond" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="@string/me_introduce"
        android:textColor="@color/loginTvUnClick"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_introduce"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow" />

        <TextView
            android:id="@+id/tv_follow_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/tv_follow"
            android:text="@string/follow" />

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/tv_follow_num"
            android:text="@string/fans" />

        <TextView
            android:id="@+id/tv_fans_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_fans"
            android:text="@string/follow" />
    </RelativeLayout>
</RelativeLayout>