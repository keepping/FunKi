<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlEtTitle"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/iv_bg"
    android:gravity="center_vertical"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/iv_Title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:src="@drawable/iv_search"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_et_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/search"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_et_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/tv_et_search"
        android:src="@drawable/iv_close" />

    <EditText
        android:id="@+id/etTitleCenter"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_toLeftOf="@+id/iv_et_close"
        android:layout_toRightOf="@+id/iv_Title_left"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="17sp"
        android:visibility="gone" />

</RelativeLayout>