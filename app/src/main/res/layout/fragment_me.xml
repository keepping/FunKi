<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_230C47"
    tools:context=".module.me.MeFragment">

    <com.hifunki.funki.widget.MeScrollView
        android:id="@+id/nest"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/layout_me_head"
                layout="@layout/fragment_me_head"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <include
                android:id="@+id/layout_mid_head"
                layout="@layout/fragment_me_mid" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_me"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/layout_mid_head" />

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="18dp"-->
            <!--android:layout_below="@+id/rv_me"-->
            <!--android:background="@color/_230C47" />-->
        </RelativeLayout>
    </com.hifunki.funki.widget.MeScrollView>

</RelativeLayout>
