<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#230C47"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="-20dp"

        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="42dp"
            android:background="@color/_FFD71B" />

        <View
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            android:background="@drawable/iv_home_bottom_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"

            android:gravity="bottom"
            android:orientation="horizontal">

            <com.hifunki.funki.module.home.widget.NavigationButton
                android:id="@+id/nav_item_home"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1" />

            <com.hifunki.funki.module.home.widget.NavigationButton
                android:id="@+id/nav_item_msg"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/nav_item"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_nav"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <com.hifunki.funki.module.home.widget.NavigationButton
                android:id="@+id/nav_item_store"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1" />

            <com.hifunki.funki.module.home.widget.NavigationButton
                android:id="@+id/nav_item_me"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>





