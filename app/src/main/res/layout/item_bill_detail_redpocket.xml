<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/_240C48"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bill_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="08:27"
        android:textColor="@color/_6B4E9A"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/tv_bill_detail_time"
        android:text="转入"
        android:textColor="@color/_6B4E9A"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_bill_detail_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/iv_vip_diamond" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/iv_bill_detail_diamond"
        android:text="+1231231"
        android:textColor="@color/_9B44ED"
        android:textSize="15sp" />


</RelativeLayout>