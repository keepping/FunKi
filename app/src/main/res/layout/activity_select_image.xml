<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.hifunki.funki.ui.activity.SelectImageActivity"
    tools:ignore="MissingPrefix">

    <include layout="@layout/title_templet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_selectimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:src="@drawable/iv_image_bg" />

        <TextView
            fontPath="fonts/FZDHTFW.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/select_image_head"
            android:textColor="@color/loginTvUnClick" />

        <LinearLayout
            android:background="@color/vistorTvbg"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="57dp"
            android:orientation="horizontal">

            <TextView
                fontPath="fonts/FZDHTFW.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/select_image_nickname"
                android:textColor="@color/loginTvUnClick"
                android:textSize="17sp" />

            <EditText
                android:layout_marginRight="27dp"
                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:hint="请输入36个字元的字符" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvResultPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <TextView
            fontPath="fonts/FZDHTFW.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="9dp"
            android:text="该昵称已有人使用"
            android:textColor="@color/selectImageWrong"
            android:textSize="11sp" />
        <!--android:visibility="gone"-->
        <TextView
            android:background="@color/vistorTvbg"
            android:id="@+id/tv_complete"
            fontPath="fonts/FZDHTFW.ttf"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="@string/complete"
            android:textColor="@color/vistorTvbgNormal"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>
