<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gallery_vp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.hifunki.funki.module.photo.gallery.activity.GalleryVpActivity">

    <include layout="@layout/title_templet" />

    <com.hifunki.funki.widget.HackyViewPager
        android:id="@+id/vp_gallery_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/flTitleContainer"
        android:background="@color/vistorTvbg"/>

    <TextView
        android:id="@+id/tv_gallery_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

</RelativeLayout>
