<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_eighteen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_28114D"
    android:orientation="vertical"
    tools:context="com.hifunki.funki.module.login.EighteenBearActivity"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/rl_eighteen_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp">

        <TextView
            android:id="@+id/tv_exit"
            fontPath="fonts/FZDHTFW.ttf"
            android:layout_width="144dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:background="@drawable/eighteen_tv_bg"
            android:textColor="@color/_FFFFFF"
            android:gravity="center"
            android:text="@string/exit"
            android:textSize="19sp" />

        <TextView
            android:textColor="@color/_FFFFFF"
            android:id="@+id/tv_enter"
            fontPath="fonts/FZDHTFW.ttf"
            android:layout_width="144dp"
            android:layout_height="39dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/eighteen_tv_bg"
            android:gravity="center"
            android:text="@string/enter"
            android:textSize="19sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_eighteen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/iv_eighteen_title" />

    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/rl_eighteen_choose"
        android:layout_below="@+id/iv_eighteen"
        android:id="@+id/rv_eighteen_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="34dp"
        android:layout_marginLeft="34dp" />

</RelativeLayout>
