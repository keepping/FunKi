<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hifunki.funki.module.me.MyLiveActicity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">


    <com.hifunki.funki.widget.bar.TopBarView
        android:id="@+id/topBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="头像认证" />

    <TextView
        android:id="@+id/tv_mylive_back"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        android:gravity="center"
        android:text="个精彩回放"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarView" />

    <TextView
        android:id="@+id/tv_mylive_hot"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="最热"
        app:layout_constraintRight_toLeftOf="@+id/tv_mylive_new"
        app:layout_constraintTop_toBottomOf="@+id/topBarView" />

    <TextView
        android:id="@+id/tv_mylive_new"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="最新"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mylive_back">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时长" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="观众数" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="回放次数" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收入" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收入"
            android:visibility="invisible" />
    </LinearLayout>

