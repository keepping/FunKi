<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/vistorTvbg"
    android:layout_height="196dp"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/titleText"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/share" />

    <LinearLayout
        android:layout_marginTop="63dp"
        android:layout_marginLeft="29dp"
        android:id="@+id/ll_me_share_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_me_facebook" />

        <ImageView
            android:layout_marginLeft="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_me_whatsapp" />

        <ImageView
            android:layout_marginLeft="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_me_wechat" />

        <ImageView
            android:layout_marginLeft="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_me_qq" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="19dp"
        android:layout_marginLeft="29dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_me_share_first"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_me_instagram" />

        <ImageView
            android:layout_marginLeft="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_me_line" />

        <ImageView
            android:layout_marginLeft="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_me_weibo" />

        <ImageView
            android:layout_marginLeft="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_me_twitter" />
    </LinearLayout>
</RelativeLayout>