<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/layout_me_head"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_recharge"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50.5dp"
                android:background="@color/_140231">

                <ImageView
                    android:id="@+id/iv_me_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21dp"
                    android:src="@drawable/iv_me_account" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_me_account"
                    android:text="@string/account"
                    android:textColor="@color/_BBABD4"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <com.hifunki.funki.widget.DashedLineView
                android:id="@+id/dl_me_account"
                android:layout_width="211dp"
                android:layout_height="1dp"
                android:layout_marginTop="51dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/_6B4E9A"
                app:lineHeight="2dp"
                app:lineWidth="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/dl_me_account"
                android:background="@color/_140231"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_me_account_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="0"
                    android:textColor="@color/_9B44ED" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/tv_me_account_num"
                    android:src="@drawable/iv_vip_diamond" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_me_account"
                android:gravity="center"
                android:text="@string/recharge"
                android:textColor="@color/_BBABD4"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_exchange"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/rl_me_head"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/rl_recharge"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50.5dp"
                android:background="@color/_140231">

                <ImageView
                    android:id="@+id/iv_me_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/iv_me_income" />

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_me_income"
                    android:text="@string/income"
                    android:textColor="@color/_BBABD4"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <com.hifunki.funki.widget.DashedLineView
                android:id="@+id/dl_me_income"
                android:layout_width="211dp"
                android:layout_height="1dp"
                android:layout_marginTop="51dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/_6B4E9A"
                app:lineHeight="2dp"
                app:lineWidth="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/dl_me_income"
                android:background="@color/_140231"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/rl_me_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_me_income_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/me_account_num"
                        android:textColor="@color/_BBABD4"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_me_income_num"
                        android:src="@drawable/iv_me_income_unit" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_me_income_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_me_income"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/me_income_recharge_num"
                    android:textColor="@color/_9B44ED"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_exchange"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_me_account"
                android:gravity="center"
                android:text="@string/excharge"
                android:textColor="@color/_BBABD4"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/rl_me_head"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/rl_exchange"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50.5dp"
                android:background="@color/_140231">

                <ImageView
                    android:id="@+id/iv_me_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/iv_me_balance" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_me_balance"
                    android:text="@string/balance"
                    android:textColor="@color/_E3AA21"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <com.hifunki.funki.widget.DashedLineView
                android:id="@+id/dl_me_balance"
                android:layout_width="211dp"
                android:layout_height="1dp"
                android:layout_marginTop="51dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/_6B4E9A"
                app:lineHeight="2dp"
                app:lineWidth="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/dl_me_balance"
                android:background="@color/_140231">

                <TextView
                    android:id="@+id/tv_me_balance_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="@string/me_account_num"
                    android:textColor="@color/_BBABD4" />

                <TextView
                    fontPath="fonts/arial_0.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/tv_me_balance_num"
                    android:text="@string/me_balance_unit"
                    android:textColor="@color/_FFD71B" />

                <TextView
                    android:id="@+id/tv_me_balance_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_me_balance_num"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/me_income_balance_num"
                    android:textColor="@color/_9B44ED"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_me_account"
                android:gravity="center"
                android:text="@string/withdraw"
                android:textColor="@color/_BBABD4"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_titile"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/rl_recharge"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="9dp"
        android:background="@color/_28114D">

        <RelativeLayout
            android:id="@+id/rl_dymic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39dp"
                android:gravity="center_vertical"
                android:src="@drawable/iv_me_dynamic" />

            <LinearLayout
                android:id="@+id/ll_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39dp"
                android:layout_toRightOf="@+id/iv_dynamic"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dynamic"
                    android:textColor="@color/_936DD1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_dynamic_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_dynamic"
                    android:layout_marginTop="9dp"
                    android:text="34"
                    android:textColor="@color/_9B44ED"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <com.hifunki.funki.widget.DashedLineView
            android:id="@+id/dl_mid"
            android:layout_width="1dp"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical"
            app:dashOrientation="1"
            app:dashWidth="2dp"
            app:lineColor="@color/_6B4E9A"
            app:lineHeight="5dp"
            app:lineWidth="1dp" />

        <RelativeLayout
            android:id="@+id/rl_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/dl_mid"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_me_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:src="@drawable/iv_me_live" />

            <LinearLayout
                android:id="@+id/ll_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39dp"
                android:layout_toRightOf="@+id/iv_me_live"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/live"
                    android:textColor="@color/_6B4E9A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_live_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_live"
                    android:layout_marginTop="9dp"
                    android:text="14"
                    android:textColor="@color/_9B44ED"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>