<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_anchor_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_CC0C001F">

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="124dp"
        android:layout_centerInParent="true"
        android:background="@color/_29114D"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="确认关闭直播吗?"
            android:textColor="@color/_BBABD4"
            android:textSize="17sp" />


        <LinearLayout
            android:id="@+id/ll_confirm"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_anchor_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/_9B44ED"
                android:textSize="17sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/_4A2F75" />

            <TextView
                android:id="@+id/tv_dialog_anchor_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.5px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/_6B4E9A"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/ll_confirm"
            android:background="@color/_4A2F75" />
    </RelativeLayout>
</RelativeLayout>