<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    tools:context="com.hifunki.funki.module.home.fragment.NavFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/vistorTvClickbg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/iv_home_bottom_bg">

        <com.hifunki.funki.module.home.widget.NavigationButton
            android:id="@+id/nav_item_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp" />

        <com.hifunki.funki.module.home.widget.NavigationButton
            android:id="@+id/nav_item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="86dp" />

        <com.hifunki.funki.module.home.widget.NavigationButton
            android:id="@+id/nav_item_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="86dp" />

        <com.hifunki.funki.module.home.widget.NavigationButton
            android:id="@+id/nav_item_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />

    </RelativeLayout>

</RelativeLayout>


