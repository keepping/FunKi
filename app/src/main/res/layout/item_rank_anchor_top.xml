<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vistorTvbg"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tv_anthor_position"
        fontPath="fonts/FZZDXFW.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp" />

    <FrameLayout
        android:id="@+id/fl_anchor_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_anchor_photo_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/rank_anchor_third" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_anchor_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/rank_anchor_third" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_anchor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_anchor_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_anchor_name"
            fontPath="fonts/FZZDXFW.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rank_accompany"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_anchor_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/iv_search_hot_girl" />

        <TextView
            android:id="@+id/tv_anchor_lv"
            fontPath="fonts/FZZDXFW.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_anchor_gold"
        fontPath="fonts/FZZDXFW.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_anchor_info"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/rank_gold_number"
        android:textColor="@color/vistorTvTitle"
        android:textStyle="bold" />
</RelativeLayout>
