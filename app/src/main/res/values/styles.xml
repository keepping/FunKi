<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/vistorTvTitle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--游客必填页面key-->
    <style name="ActivityVisitorTvTitle">
        <item name="android:textColor">@color/vistorTvTitle</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--游客必填页面value-->
    <style name="ActivityVisitorTvValue">
        <item name="android:textColor">@color/titleText</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/visitor_tv_bg</item>
    </style>

    <style name="BaseEditText">

    </style>

    <!--gallerypick PopupWindow动画-->
    <style name="popupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_fade</item>
        <item name="android:windowExitAnimation">@anim/out_fade</item>
    </style>

    <!-- gallerypick 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!--节目预告页面虚线-->
    <declare-styleable name="deshedLine">
        <attr name="lineColor" format="color"/>
        <attr name="dashWidth" format="dimension"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
    </declare-styleable>

    <!--节目预告dialog-->
    <style name="show_pay_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowEnterAnimation">@anim/dialog_show_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_show_exit</item>
    </style>
</resources>
