<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/vistorTvTitle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!--游客必填页面key-->
    <style name="ActivityVisitorTvTitle">
        <item name="android:textColor">@color/vistorTvTitle</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--游客必填页面value-->
    <style name="ActivityVisitorTvValue">
        <item name="android:textColor">@color/titleText</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/visitor_tv_bg</item>
    </style>


    <!--PopupWindow动画-->
    <style name="popupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_fade</item>
        <item name="android:windowExitAnimation">@anim/out_fade</item>
    </style>


    <style name="GalleryBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />


    <style name="GalleryTheme" parent="GalleryBaseTheme" />


    <style name="galleryBtnBackground" parent="GalleryBaseTheme">
        <item name="android:background">@null</item>
    </style>

</resources>
